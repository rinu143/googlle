rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return signedIn() && request.auth.uid == uid;
    }

    function isAdmin() {
      return signedIn() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    match /users/{uid} {
      allow read: if isOwner(uid) || isAdmin();
      allow write: if false;
    }

    match /userSettings/{uid} {
      allow read: if isOwner(uid) || isAdmin();
      allow write: if isOwner(uid) || isAdmin();
    }

    match /publicPerformers/{slug} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /searches/{searchId} {
      allow read: if isAdmin() || (
        signedIn() &&
        exists(/databases/$(database)/documents/slugs/$(resource.data.slug)) &&
        get(/databases/$(database)/documents/slugs/$(resource.data.slug)).data.uid == request.auth.uid
      );
      allow write: if false;
    }

    match /slugs/{slug} {
      allow read: if isAdmin() || (signedIn() && resource.data.uid == request.auth.uid);
      allow write: if false;
    }

    match /sessions/{uid} {
      allow read, write: if isOwner(uid) || isAdmin();

      match /devices/{deviceId} {
        allow read, write: if isOwner(uid) || isAdmin();
      }
    }

    match /devices/{uid} {
      allow read, write: if isOwner(uid) || isAdmin();

      match /tokens/{tokenId} {
        allow read, write: if isOwner(uid) || isAdmin();
      }
    }

    match /config/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
